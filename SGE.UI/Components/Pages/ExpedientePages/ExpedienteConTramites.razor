@page "/exptramlistar"
@rendermode InteractiveServer
@inject CasoDeUsoExpedienteConsultaTodos ConsultaTodos
@inject NavigationManager Navigation
<h3>Expediente y Tramites</h3>

<input placeholder="ID a consultar" @bind="idExp" class="mt-3 form-control" /><br>
@if (visible)
{
    <h5>Expediente</h5>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Caratula</th>
                <th>Estado</th>
                <th>Fecha de creacion</th>
                <th>Fecha de modificacion</th>
                <th>Ultimo usuario en modificarlo</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@e.Id</td>
                <td>@e.Caratula</td>
                <td>@e.Estado</td>
                <td>@e.FechayHoraCr</td>
                <td>@e.FechayHoraMod</td>
                <td>@e.IdUser</td>
            </tr>
        </tbody>
    </table>
    <h5>Tramites</h5>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>ID del expediente</th>
                <th>Etiqueta</th>
                <th>Contenido</th>
                <th>Fecha de creacion</th>
                <th>Fecha de modificacion</th>
                <th>Ultimo usuario en modificarlo</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 1; i < lista.Count; i++)
            {
                Tramite t = (Tramite)lista[i];
                <tr>
                    <td>@t.Id</td>
                    <td>@t.ExpedienteId</td>
                    <td>@t.Etiqueta</td>
                    <td>@t.Contenido</td>
                    <td>@t.FechayHoraCr</td>
                    <td>@t.FechayHoraMod</td>
                    <td>@t.IdUser</td>
                </tr>
            }
        </tbody>
    </table>
}
<button class="btn btn-primary mt-2" @onclick="() => Consultar(idExp)">Aceptar</button><br>
<button class="btn btn-secondary mt-2" @onclick="Volver">Volver al menu</button>
<br>
<CuadroDialogo @ref=dialogo Mensaje=@error />

@code {
    [Parameter] public int Id { get; set; }
    List<object> lista = [];
    string error = "";
    Expediente e = new();
    int idExp;
    bool visible = false;
    CuadroDialogo dialogo = null!;


    public void Consultar(int idExp)
    {
        try
        {
            lista = ConsultaTodos.Ejecutar(idExp);
            e = (Expediente)lista[0];
            visible = true;
        }
        catch (Exception ex)
        {
            error = ex.Message;
            dialogo.Mostrar();
            visible = false;
        }
    }

    public void Volver()
    {
        Navigation.NavigateTo($"/home");
    }
}
